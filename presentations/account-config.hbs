<div class="row">
    <div class="col-sm-12">
        <h2>Account Configuration</h2>

        {{#if errors}}

        <div class="alert alert-danger">
            <p><strong>There was a problem with your configuration.</strong> Please check for errors.</p>
        </div>

        {{/if}}

        <form action="/account/config" method="post">
            <div class="row">
                <div class="form-group col-sm-6">
                    <label for="fname">First name</label>
                    <input type="text" class="form-control" name="fname" id="fname" value="{{form.fname}}" placeholder="First Name">
                </div>
                <div class="form-group col-sm-6">
                    <label for="lname">Last name</label>
                    <input type="text" class="form-control" name="lname" id="lname" value="{{form.lname}}" placeholder="Last Name">
                </div>
            </div>

            {{#if errors.name}}

            <div>
                <div class="alert alert-warning">
                    {{#each errors.name}}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            </div>

            {{/if}}

            <div class="form-group">
                <input type="submit" name="register" class="btn btn-default btn-primary" value="Update">
            </div>
        </form>
    </div>
</div>
