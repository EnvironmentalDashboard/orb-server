/**
 * Orb Animation Keyframes
 *
 * Dynamically generated
 * {{timestamp}}
 */

{{#each instructions}}

/**
 * Orb {{@key}}
 */

{{#each meters}}
/**
 * Usage: {{usage}}
 */
@keyframes orb-{{@../key}}-meter-{{@key}} {
    0% { background-color: hsl({{hue}}, 100%, 70%); }
    100% { background-color: hsl({{hue}}, 80%, 50%); }
}
.orb-{{@../key}}-meter-{{@key}} {
    animation-duration: {{period}}s; /* period */
    animation-name: orb-{{@../key}}-meter-{{@key}};
    animation-iteration-count: infinite;
    animation-direction: alternate;
    animation-timing-function: linear;
}

{{/each}}
