/**
 * Orb Animation Keyframes
 *
 * Dynamically generated
 */

{{#each instructions}}

/**
 * Orb {{@key}} keyframes and animation assignment
 */
{{#each meters}}
@keyframes orb-{{@../key}}-meter-{{@key}} {
    0% { background-color: hsl({{hue}}, 100%, 50%); }
    100% { background-color: hsl({{hue}}, 100%, 80%); }
}
.orb-{{@../key}}-meter-{{@key}} {
    animation-duration: {{period}}s;
    animation-name: orb-{{@../key}}-meter-{{@key}};
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

{{/each}}
{{/each}}
