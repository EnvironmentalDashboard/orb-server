<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="icon" href="images/logo.png">

    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>

    <style type="text/css">

    .no-margin {
        margin: 0;
    }

    .ui-rounded-container .ui-rounded-item-wrap {
        text-align: center;
        padding: 10px;
    }

    .ui-rounded-container .ui-rounded-item-wrap .ui-rounded-item {
        background: #eee;
        border-radius: 10px;
        padding: 10px;
    }

    .ui-rounded-container .ui-rounded-item-wrap .ui-rounded-item .ui-rounded-icon {
        font-size: 3em;
    }

    .ui-rounded-container .ui-rounded-item-wrap .ui-rounded-item .ui-rounded-icon p {
        margin: 0;
    }

    .ui-btn-toggle {
        background: #fff;
        display: inline-block;
        border-radius: 4px;
    }

    .ui-btn-toggle input[type=radio] {
        display: none;
    }

    .ui-btn-toggle label {
        margin: 0;
    }

    .ui-btn-toggle input[type=radio]:checked + span {
        background: rgb(47, 121, 185);
        color: #fff;
    }

    .ui-alert-action p {
        float: left;
        padding: 6px 12px;
    }

    .ui-alert-action a.btn {
        float: right;
    }

    </style>

    <title>Environmental Orb</title>
</head>

<body>
    <div class="page-wrap">
        <header>
            <nav class="navbar navbar-inverse navbar-static-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">Environmental Orb</a>
                    </div>

                    <ul class="nav navbar-nav navbar-right">
                        {{#if loggedIn}}
                        <li><a>{{loggedIn.email}}</a></li>
                        <li><a href="/guide">Help guide</a></li>
                        <li><a href="/dash">Dashboard</a></li>
                        <li><a href="/account/signout">Sign out</a></li>
                        {{else}}

                        <li><a href="/guide">Help guide</a></li>
                        <li><a href="/account/signin">Login</a></li>
                        <li><a href="/account/signup">Sign up</a></li>

                        {{/if}}
                    </ul>
                </div>
            </nav>
        </header>

        {{{body}}}
    </div>
</body>
</html>
