<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <h2>Sign In</h2>

            {{#if errors}}

            <div class="alert alert-danger">
                {{#each errors.login}}
                    <p>{{this}}</p>
                {{/each}}
            </div>

            {{/if}}

            {{> login}}
        </div>
    </div>
</div>
